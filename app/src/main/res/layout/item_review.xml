<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivUser"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReviewUsername"
        android:text="User Name"
        android:textSize="17sp"
        android:textColor="@color/primaryText"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_toRightOf="@+id/ivUser"
        />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReviewDate"
         android:textSize="16sp"
        android:text="Date"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReviewScore"
        android:text="2.1"
        android:textColor="@color/gold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="7dp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/gold_rectangle"
        android:layout_below="@+id/tvReviewDate"
        android:layout_alignEnd="@+id/tvReviewDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReviewBody"
        android:text="Description"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="sans-serif-medium"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/tvReviewUsername"
        android:layout_toRightOf="@+id/ivUser"
        android:layout_toEndOf="@+id/ivUser" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/ivReview"
        android:layout_below="@id/tvReviewScore"/>

</RelativeLayout>